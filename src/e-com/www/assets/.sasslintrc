{
   "options": {
      "cache-config": false,
      "config-file": "PATH/TO/YOUR/ADDITIONAL/CONFIG/FILE",
   },
   "files": {
		"include": "sass/**/*.s+(a|c)ss",
		"ignore": [
         "sass/3rd/**/*.*",
         "spectre/**/*.*",
		]
   },
   "rules": {
      "indentation": [
			4,
			{
				"size": 4
			}
      ],
      "property-sort-order": [
			1,
			{
				"order": [
					"display",
					"margin"
				],
				"ignore-custom-properties": true
			}
		],
   }
}