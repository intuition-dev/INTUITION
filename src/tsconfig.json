{
    "compilerOptions": {
        "pretty": false,
        "listEmittedFiles": true,
        "module": "commonjs",
        "target": "ES2017",
        
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,

        "esModuleInterop"             : true,

        "removeComments": true,
        "outDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
       ]
}
