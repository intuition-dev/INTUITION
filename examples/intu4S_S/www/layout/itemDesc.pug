.bl-desc
    .bl-desc__title.font-weight-light.mb-5.text-capitalize #{item.name}
    .bl-desc__color.font-weight-bolder.mb-3 Color: 
        span.color-box
        .font-weight-normal.d-inline-block.pl-1.bl-desc--option #{item.color}
    .js-bl-desc__size.bl-desc__size.font-weight-bolder.mb-3 Size: 
        span.font-weight-normal.d-inline-flex.text-center.justify-content-center.align-items-center.px-2.ml-1.bl-desc--option(data-size="S", data-id=item.sizeS) S
        span.font-weight-normal.d-inline-flex.text-center.justify-content-center.align-items-center.px-2.bl-desc--option(data-size="M", data-id=item.sizeM) M
        span.font-weight-normal.d-inline-flex.text-center.justify-content-center.align-items-center.px-2.bl-desc--option(data-size="L", data-id=item.sizeL) L
        span.font-weight-normal.d-inline-flex.text-center.justify-content-center.align-items-center.px-2.bl-desc--option(data-size="XL", data-id=item.sizeXL) XL
    .bl-desc__quantity.font-weight-bolder.mb-3 Quantity: 
        .qty-input.js-qty.ml-2
            span.less -
            input(type="text" value="1" data-quantity)
            span.more +
    .bl-desc__size.font-weight-bolder.mb-3 Price: 
        .font-weight-normal.d-inline-block.pl-1.bl-desc--option $ #{item.price}
    .d-flex.mt-5
        a.d-inline-block.text-left.js-buy.bl-desc__btn.snipcart-add-item.mr-3(href='#') Add to Cart
        button.d-inline-block.js-buy.js-buy-checkout.bl-desc__btn Click here to checkout

