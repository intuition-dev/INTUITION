doctype html
html(lang='en_US')
   head
      include headFrag
      //- this website has 4 interactive effects
      link(rel='amphtml', href='m.html')
      link(rel='shortcut icon', href= '/assets/favicon.png', type='image/x-icon')

      title #{title}
      meta(name='description', content=content_text)

      //- Twitter Card data
      meta(name='twitter:card', content='summary_large_image')
      meta(name='twitter:title', content=title)
      meta(name='twitter:description', content=content_text)
      //- Twitter summary card with large image must be at least 280x150px
      meta(name='twitter:image', content=image)

      //- Open Graph data
      meta(property='og:title', content=title)
      meta(property='og:type', content='article')
      //- meta(property='og:url', content='#')
      meta(property='og:image', content=image)
      meta(property='og:description', content=comment)


      //- loading
      script(src='//unpkg.com/axios@0.19.0-beta.1/dist/axios.min.js')

      //- get the images
      script(src='//cdn.jsdelivr.net/npm/blueimp-load-image@2.19.0/js/load-image.all.min.js')
      script(src= '/assets/js/loader.js')

      //- top css layout
      link(href='/assets/css/spectreTop.css', rel='stylesheet', type='text/css') 
      style.
         .delayShowing { opacity: 0 !important; }
      //- in case a page needs it:
      block head2

   body

      include navJBar

      .l-wrapper
         block main
         include foot

      script.
         function userSzSc() {
            console.info('resize|scroll')
         }
      
