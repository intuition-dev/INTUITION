//- note it is deferred!, so page script load and run first
script(src='/assets/js/ui-loader.js', defer='true')

style.
   html { touch-action: manipulation; }

   .delayShowing { opacity: .3; }
   .blurT, .blurF { 
      -webkit-backdrop-filter:blur(2px);
      backdrop-filter:blur(2px); 
   }

   .centerSpin {
      position:fixed;
      padding:0;
      margin:0;
      top:0;
      left:0;
      width: 100%;
      height: 100%;
      z-index: 1000;
      
      background: rgba(192,192,192, 0.1);

      display: flex;
      justify-content: center;
      padding-top: 1rem;
   }

   .tabulator-col {
      height: 40px;
   }
   .tabulator-cell {
      height: 40px;
   }
   .grid-form > fieldset > legend {
      margin: 0;
   }
