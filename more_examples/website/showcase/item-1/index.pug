extends /layout/layout

block main
    section.l-section-container
        .container
            .columns
                .column.col-11.col-mx-auto
                    .card
                        .card-header
                            .card-title.h5 #{cardTitle}
                            .card-subtitle.text-gray #{cardSubtitle}
                        .card-image
                            img.img-responsive(src='who.jpg' alt=cardSubtitle)
                        .card-body #{cardBody}
                        .card-footer
                            .btn-group.btn-group-block
                                .btn.btn-primary #{button}
                                .btn #{button}
                                .btn #{button}