doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title #{title}
        script(src=ROOT + 'lib/jquery/jquery.min.js')
        script(src=ROOT + 'app.js')

        style.
            body {
                margin: 10px 15px;
            }
            h1 {
                font-size: 12px;
                font-weight: 200;
                line-height: 1.3;
                letter-spacing: 2px;
                margin-bottom: 10px;
            }
            h1 div {
                font-weight: 600;
                letter-spacing: 1px;
            }
            h1, button {
                white-space: nowrap;
                text-align: center;
            }
            button {
                padding: 7px 15px 8px 15px;
                margin: 0;
                border: 0; 
                border-radius: 30px;
                background: #1b98f8;
                outline: none;
                color: #fff;
                transition: all .2s ease-in-out;
                cursor: pointer;
            }
            button:hover {
                background: #006ec3;
            }
            button[disabled] {
                background: rgba(0,0,0,.2);
                cursor: default;
            }

    body
        h1 MetaBake
            div WebAdmin
        button(id='check', type='button', disabled) Edit page